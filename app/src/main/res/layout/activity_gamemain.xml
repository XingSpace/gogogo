<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/game_back"/>

    <com.xing.game.gogogo.View.Warning
        android:id="@+id/warning2"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"/>

    <com.xing.game.gogogo.View.Missile
        android:id="@+id/missile2"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_marginLeft="-72dp"/>

    <com.xing.game.gogogo.View.Warning
        android:id="@+id/warning1"
        android:layout_gravity="center_vertical|right"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"/>

    <com.xing.game.gogogo.View.Missile
        android:id="@+id/missile1"
        android:layout_marginRight="-72dp"
        android:layout_gravity="center_vertical|right"
        android:layout_width="72dp"
        android:layout_height="32dp" />

    <com.xing.game.gogogo.View.Ball
        android:layout_gravity="bottom|center"
        android:id="@+id/ball"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <com.xing.game.gogogo.View.Ball
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom"
        android:id="@+id/target"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- 左上角的得分栏 -->
        <TextView
            android:id="@+id/ScoreText"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="得分:"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/score"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ScoreText"
            android:textSize="20dp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginRight="5dp">
        <!-- 右上角的计时栏 -->

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/TimeText"
            android:textSize="20dp"
            android:text="时间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time"
            android:layout_toRightOf="@+id/TimeText"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</FrameLayout>